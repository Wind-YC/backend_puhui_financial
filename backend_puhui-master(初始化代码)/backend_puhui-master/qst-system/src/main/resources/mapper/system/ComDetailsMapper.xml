<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qst.system.mapper.ComDetailsMapper">

    <resultMap type="ComDetails" id="ComDetailsResult">
        <result property="cId" column="c_id"/>
        <result property="coId" column="co_id"/>
        <result property="cIntegral" column="c_integral"/>
        <result property="cLicense" column="c_license"/>
        <result property="cType" column="c_type"/>
        <result property="cLegalName" column="c_legal_name"/>
        <result property="cLegalId" column="c_legal_id"/>
        <result property="cLegalImg" column="c_legal_img"/>
        <result property="cLegalTime" column="c_legal_time"/>
        <result property="cPro" column="c_pro"/>
        <result property="cCity" column="c_city"/>
        <result property="cAddress" column="c_address"/>
        <result property="cBusSco" column="c_bus_sco"/>
        <result property="cLicTime" column="c_lic_time"/>
        <association property="company" column="c_id" javaType="Company" resultMap="CompanyResult"/>
        <association property="provinces" column="cPro" javaType="Provinces" resultMap="ProvincesResult"/>
        <association property="cities" column="cCity" javaType="Cities" resultMap="CitiesResult"/>
    </resultMap>

    <resultMap type="Company" id="CompanyResult">
        <result property="comId" column="com_id"/>
        <result property="comNo" column="com_no"/>
        <result property="comName" column="com_name"/>
        <result property="comEmail" column="com_email"/>
        <result property="comPhone" column="com_phone"/>
        <result property="comPwd" column="com_pwd"/>
        <result property="comRemark" column="com_remark"/>
        <result property="comStatus" column="com_status"/>
        <result property="comDel" column="com_del"/>
    </resultMap>

    <resultMap type="Provinces" id="ProvincesResult">
        <result property="id" column="id"/>
        <result property="provinceid" column="provinceid"/>
        <result property="province" column="province"/>
    </resultMap>

    <resultMap type="Cities" id="CitiesResult">
        <result property="id" column="id"/>
        <result property="cityid" column="cityid"/>
        <result property="city" column="city"/>
        <result property="provinceid" column="provinceid"/>
    </resultMap>

    <sql id="selectCompanyDetailsVo">
        select c_id,
               co_id,
               c_integral,
               c_license,
               c_type,
               c_legal_name,
               c_legal_id,
               c_legal_img,
               c_legal_time,
               c_pro,
               c_city,
               c_address,
               c_bus_sco,
               c_lic_time,
               com_id,
               com_no,
               com_name,
               com_email,
               com_phone,
               com_pwd,
               com_time,
               com_remark,
               com_status,
               com_card,
               p.province,
               t.city
        from com_details d
                 left join company c on d.co_id = c.com_id
                 left join provinces p on d.c_pro = p.provinceid
                 left join cities t on d.c_city = t.cityid
    </sql>
    <insert id="addComDetails">
        insert into com_details (
        <if test="coId != null and coId != ''">co_id</if>
        <if test="cIntegral != null and cIntegral != ''">,c_integral</if>
        <if test="cLicense != null and cLicense != ''">,c_license</if>
        <if test="cType != null and cType != ''">,c_type</if>
        <if test="cLegalName != null and cLegalName != ''">,c_legal_name</if>
        <if test="cLegalId != null and cLegalId != ''">,c_legal_id</if>
        <if test="cLegalImg != null and cLegalImg != ''">,c_legal_img</if>
        <if test="cLegalTime != null">,c_legal_time</if>
        <if test="cPro != null and cPro != ''">,c_pro</if>
        <if test="cCity != null and cCity != ''">,c_city</if>
        <if test="cAddress != null and cAddress != ''">,c_address</if>
        <if test="cBusSco != null and cBusSco != ''">,c_bus_sco</if>
        <if test="cLicTime != null">,c_lic_time</if>
        ) values (
        <if test="coId != null and coId != ''">#{coId}</if>
        <if test="cIntegral != null and cIntegral != ''">,#{cIntegral}</if>
        <if test="cLicense != null and cLicense != ''">,#{cLicense}</if>
        <if test="cType != null and cType != ''">,#{cType}</if>
        <if test="cLegalName != null and cLegalName != ''">,#{cLegalName}</if>
        <if test="cLegalId != null and cLegalId != ''">,#{cLegalId}</if>
        <if test="cLegalImg != null and cLegalImg != ''">,#{cLegalImg}</if>
        <if test="cLegalTime != null">,#{cLegalTime}</if>
        <if test="cPro != null and cPro != ''">,#{cPro}</if>
        <if test="cCity != null and cCity != ''">,#{cCity}</if>
        <if test="cAddress != null and cAddress != ''">,#{cAddress}</if>
        <if test="cBusSco != null and cBusSco != ''">,#{cBusSco}</if>
        <if test="cLicTime != null">,#{cLicTime}</if>
        )
    </insert>
    <update id="updateComStatusTo5">
        update company
        set com_status=5
        where com_id=#{coId}
    </update>
    <update id="updateComStatusTo3">
        update company
        set com_status = 3
        where com_id in (
        select co_id from com_details
        where c_id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
        )
    </update>
    <update id="updateComDetails">
        UPDATE com_details
        <set>
            <trim prefix="" suffixOverrides=",">
                co_id = #{coId},
                c_integral = #{cIntegral},
                c_license = #{cLicense},
                c_type = #{cType},
                c_legal_name = #{cLegalName},
                c_legal_id = #{cLegalId},
                c_legal_img = #{cLegalImg},
                c_legal_time = #{cLegalTime},
                c_pro = #{cPro},
                c_city = #{cCity},
                c_address = #{cAddress},
                c_bus_sco = #{cBusSco},
                c_lic_time = #{cLicTime},
            </trim>
        </set>
        WHERE
        c_id = #{cId}
    </update>



    <delete id="deleteCompanyById">
        delete from com_details
        where c_id in <foreach collection="list" item="id" open="(" close=")" separator=",">#{id}</foreach>
    </delete>
    <select id="selectComDetailsList" resultMap="ComDetailsResult">
        <include refid="selectCompanyDetailsVo" />
        <where>
            com_status in (4,5) and
            c_del = 0
            <if test="cIntegral != null  and cIntegral != ''">and c_integral = #{cIntegral}</if>
            <if test="cLicense != null  and cLicense != ''">and c_license = #{cLicense}</if>
            <if test="cType != null  and cType != ''">and c_type = #{cType}</if>
            <if test="cLegalName != null  and cLegalName != ''">and c_legal_name like concat('%', #{cLegalName}, '%')
            </if>
            <if test="cLegalId != null  and cLegalId != ''">and c_legal_id = #{cLegalId}</if>
            <if test="cLegalImg != null  and cLegalImg != ''">and c_legal_img = #{cLegalImg}</if>
            <if test="cLegalTime != null ">and c_legal_time = #{cLegalTime}</if>
            <if test="cPro != null  and cPro != ''">and c_pro = #{cPro}</if>
            <if test="cCity != null  and cCity != ''">and c_city = #{cCity}</if>
            <if test="cAddress != null  and cAddress != ''">and c_address = #{cAddress}</if>
            <if test="cBusSco != null  and cBusSco != ''">and c_bus_sco = #{cBusSco}</if>
            <if test="cLicTime != null ">and c_lic_time = #{cLicTime}</if>
        </where>
    </select>
    <select id="selectComDetailsById" resultMap="ComDetailsResult">
        <include refid="selectCompanyDetailsVo" />
            where c_id = #{cId}
    </select>


</mapper>